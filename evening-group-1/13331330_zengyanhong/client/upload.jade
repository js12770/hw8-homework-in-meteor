template(name="upload")
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Upload Ur HomeWork
					div.account-wall
						form(class='form-signin', action='/upload', method='POST')
							p
								|HomeWork Name
								input(type='text',name='hwname',size='20')
							p
								|Detail
								textarea(rows='10', cols='25',type='text',name='detail',size='30')
							button(class='btn btn-lg btn-primary btn-block', type='submit') Upload
							span.clearfix
	a(href="{{pathFor 'index'}}", class='text-center new-account') Sign Out