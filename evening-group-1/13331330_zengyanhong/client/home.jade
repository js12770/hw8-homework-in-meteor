template(name="home")
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
					h1.text-center.login-title Welcome #{user.firstName}! Check your details below:
						div.signup-wall
							ul.user-details
								li Username ---> #{user.username}
								li Identity ---> #{user.identity}
								li Email    ---> #{user.email}
								li First Name ---> #{user.firstName} 
								li Last Name ---> #{user.lastName}
						a(href = "{{pathFor 'homework'}}", class='text-center new-account') Homework List
						a(href = "{{pathFor 'index'}}", class='text-center new-account') Sign Out