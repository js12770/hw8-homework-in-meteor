template(name="create")
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Create New Homework
					div.account-wall
						form(class='form-signin', action='/Create', method='POST')
							p
								|Homework Name 
								input(type='text', name='taskname' class='form-control', placeholder='Homeworkname',required, autofocus)
							p
								|detail
								input(type='text', name='detail' class='form-control', placeholder='detail', required)
							p
								|start-date
								input(type='text', name='start-date' class='form-control', placeholder='start-date', required)
							p
								|dead-line
								input(type='text', name='dead-line' class='form-control', placeholder='dead-line', required)

							button(class='btn btn-lg btn-primary btn-block', type='submit') Create
							span.clearfix
	a(href="{{pathFor 'index'}}", class='text-center new-account') Sign Out
				