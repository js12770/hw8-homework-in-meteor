div.container.l
	div.row
		div.col-sm-6.col-md-4.col-md-offset-4
			h1.text-center.login-title 登陆账号
				div.account-wall
					form.form-signin.log
						input(type='text', name='username' class='form-control', placeholder='Username',required, autofocus)
						input(type='password', name='password' class='form-control', placeholder='Password', required)
						input(class='btn btn-lg btn-primary btn-block login', type='submit', value='登陆')
						span.clearfix
					button.form-signin.btn.btn-lg.btn-primary.btn-block.goregist 注册账号

div.container.r.hidden
	div.row
		div.col-sm-6.col-md-4.col-md-offset-4
			h1.text-center.login-title 注册账号
				div.signup-wall
					form.form-signin.reg
						input(type='text', name='username', class='form-control', placeholder='用户名',required, autofocus)
						input(type='password', name='password', class='form-control nomargin', placeholder='密码', required)
						input(type='email', name='email', class='form-control', placeholder='Email',required)
						input(type='text', name='firstName', class='form-control', placeholder='名字',required)
						input(type='text', name='lastName', class='form-control', placeholder='姓氏',required)
						select(class="form-control" name='identity' sel)
							option(selected="selected" value="student") 学生
							option(value="teacher") 老师
						input(class='btn btn-lg btn-primary btn-block regist', type='submit', value='注册')
						span.clearfix