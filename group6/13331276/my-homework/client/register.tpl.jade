block content
	a(href="/login" class="login") back to login
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Registration Details
					div.signup-wall
						form(class='form-signin')
							input(type='text', name='username', class='form-control', placeholder='Username',required, autofocus)
							input(type='password', name='password', class='form-control nomargin', placeholder='Password', required)
							input(type='email', name='email', class='form-control', placeholder='Email',required)
							input(type='text', name='firstName', class='form-control', placeholder='First Name',required)
							input(type='text', name='lastName', class='form-control', placeholder='Last Name',required)
							select(name='identity', class='form-control')
								option(value='student') student
								option(value='teacher') teacher
							button(class='btn btn-lg btn-primary btn-block btn-rg', type='submit') Register
							span.clearfix
					h1.text-center.error-message=error
