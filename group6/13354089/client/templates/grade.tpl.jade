.container
    .page-header
        h1 Welcome #{user.username}
        h3 Check #{homework.student}'s submission for #{homework.homeworkName}
    .row
        .container
            .panel.panel-default
                .panel-heading
                    h3.panel-title
                        a(data-toggle="collapse" href="#collapsearea") #{homework.student}
                #collapsearea.panel-collapse.collapse.in
                    .panel-body
                        p Commitment  ---> #{homework.commitment}
                        p Upload Date ---> #{getUploadDate}
                        p: span File:
                            span.left-holder
                            a(href='/download/#{homework.homeworkName}/#{homework.student}') 
                                span.glyphicon.glyphicon-download-alt
                .panel-footer
                    form.grade.form-inline(method='POST')
                        .form-group.hidden
                            label(for='student') Student
                            span.left-holder
                            input(class='form-control', type='text', name='student', value='#{homework.student}', readonly)
                        .form-group.hidden
                            label(for='name') Homework Title
                            span.left-holder
                            input(class='form-control', type='text', name='homework', value='#{homework.homeworkName}', readonly)
                        .form-group
                            label(for='grades') Homework Grades
                            span.left-holder
                            input.form-control(type='number', min='0', max='100', step='0.1', name='grades', required, autofocus)
                        span.left-holder
                        if afterDeadline homework
                            button(class='btn btn-default', type='submit')
                                span.glyphicon.glyphicon-ok(aria-hidden="true")
                        else
                            button(class='btn btn-default', type='submit', disabled)
                                span.glyphicon.glyphicon-ok(aria-hidden="true")
                            span.left-holder
                            span.label.label-danger Not yet
                        span.clearfix
            #message
                if message
                    h1.text-center.error-message #{message}
