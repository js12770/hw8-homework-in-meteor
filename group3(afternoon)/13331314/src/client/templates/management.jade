
template(name="manage")
		div.col-md-4
			h1.text-center.login-title Publish One Homework
				div.signup-wall
					form(class='form-signin', id="publish")
						input(type='text', name='question', class='form-control', placeholder='Question',required)
						textarea(class="form-control" rows="5" cols="50" name="requirement" placeholder='Requirements')
						input(type='text', name='course', class='form-control', placeholder='Course',required)
						input(id="datepicker1",type="text",placeholder='Deadline',class='form-control', name="deadline")
						button(class='btn btn-lg btn-primary btn-block', type='submit') Publish
						span.clearfix

	
		div.col-md-4
			h1.text-center.login-title Update Homework
				div.signup-wall
					form(class='form-signin', id="update")
						input(type='text', name='question', class='form-control', placeholder='Question',required)
						textarea(class="form-control" rows="5" cols="50" name="requirement" placeholder='Requirements') 
						input(type='text', name='course', class='form-control', placeholder='Course',required)
						input(id="datepicker2",type="text",placeholder='Deadline',class='form-control', name='deadline')
						button(class='btn btn-lg btn-primary btn-block', type='submit') Update
						span.clearfix
			
