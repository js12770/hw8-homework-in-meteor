#homefull.jumbotron
  .top-holder
  .container
    h1 Welcome #{user.username}
    h3 This is a simple Homework Management System, you can:
    p: a.btn.btn-primary.btn-lg(href='/info', role="button") Check your information
      span.left-holder
      span.glyphicon.glyphicon-user(aria-hidden="true")
    p: a.btn.btn-primary.btn-lg(href='/allhomeworks', role="button") Check all homeworks
      span.left-holder
      span.glyphicon.glyphicon-check(aria-hidden="true")
    if (userIsTeacher)
      p
        a.btn.btn-primary.btn-lg(href='/create', role="button") Create new homeworks
          span.left-holder
          span.glyphicon.glyphicon-plus(aria-hidden="true")
    else
      p: a.btn.btn-primary.btn-lg(href='/check/#{user.username}', role="button") Check all submissions
        span.left-holder
        span.glyphicon.glyphicon-check(aria-hidden="true")

  #message.text-center.alert-danger
      if message
          h1.text-center.error-message #{message}