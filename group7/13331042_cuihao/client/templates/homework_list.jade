template(name="homeworkList")
	nav.navbar.navbar-default
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="/") MyHomework
			#bs-example-navbar-collapse-1.collapse.navbar-collapse
				ul.nav.navbar-nav
					li.active
						a(href="/allhomework") 
							| All
							span.sr-only (current)
				ul.nav.navbar-nav.navbar-right
					li
						a(href="#") wellcome,
					li
						a(href="#") {{> loginButtons}}

	div.container.center-block.templatemo-form-list-container.templatemo-container.addmargintop2
		div.col-md-12
			if assignments
				table.table.table-striped.table-hover
					thead
						tr
							th #
							th Homework
							th Deadline
							th Author
							th.text-right 
					
					
					tbody
						each assignments
							{{> homeworkItem}}
			else
				.alert.alert-info(role="alert")
					|There's no homework yet.
 
					
			if isTeacher
				.alert.alert-success(role="alert").addmargintop2
					strong You can publish a new homework->
					a.btn.btn-default.addmargin(href="/addassignment", role="button") Create
			