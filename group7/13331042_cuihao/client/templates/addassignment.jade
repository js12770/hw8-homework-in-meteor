template(name="addAssignment")
	nav.navbar.navbar-default
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="/") MyHomework
			#bs-example-navbar-collapse-1.collapse.navbar-collapse
				ul.nav.navbar-nav
					li
						a(href="/allhomework") All->
					li.active
						a(href="#")
							| New
							span.sr-only (current)
				ul.nav.navbar-nav.navbar-right
					li
						a(href="#") wellcome,
					li.dropdown
						a(href="#") {{> loginButtons}}

	.container
		.col-md-12
			h1.text-center.margin-bottom-15 Create a Homework
			form.form-horizontal.templatemo-contact-form-2.templatemo-container(role="form", action="/addassignment", method="post")
				.row
					.col-md-6
						.form-group
							.col-sm-12
								.templatemo-input-icon-container
									|Title:
									input#title.form-control(name="title", type="title", placeholder="Title",required)
						.form-group
							.col-sm-12
								.templatemo-input-icon-container
									|Brief introduction:
									input#brief.form-control(name="brief", type="brief", placeholder="Brief introduction",required)
						.form-group
							.col-sm-12
								.templatemo-input-icon-container
									|Deadline:
									input#datetimepicker.form-control(name="deadline", type="text", value="",required)
					.col-md-6
						.form-group
							.col-md-12
								.templatemo-input-icon-container
									textarea#details.form-control(name="details", rows="10", cols="50", placeholder="Details",required)
				.form-group
					.col-md-12
						input.btn.btn-warning.center-block(type="submit", value="Create")
